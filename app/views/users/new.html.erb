<fieldset class="fieldset-auto-width", align="center">
    <legend><h3>Sign Up</h3></legend>

        <%= form_for @user do |f| %>
            <%= f.text_field :name, placeholder: "Name"  %>
            <br><br>
            <%= f.email_field :email, placeholder: "Email"  %>
            <br><br>
            <%= f.password_field :password, placeholder: "Password"  %>
            <br><br>
            <%= f.submit "Sign Up" %>
        <% end %>
        <br>
        <%= link_to "Sign In via Facebook", '/auth/facebook' %>

</fieldset>