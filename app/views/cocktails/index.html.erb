<div>
    <div style="float: left;">
        <%= form_tag("/cocktails", method: "get", :class => "form") do %>
            Search by Cocktail name: 
            <%= text_field_tag :name, params[:name] %>
            <button type=submit_tag >Search</button>
        <% end %>
    </div>
    <div style="float: right;">
        Order name by: <%= link_to "ABC", sorted_abc_cocktails_path %> | <%= link_to "ZYX", sorted_zyx_cocktails_path %>
    </div>
</div>
<br><br>

<% if @cocktails.size == 0 %>
    <h3> There is no Cocktails yet. Please create a new one! </h3> 
<% else %>
    <% @cocktails.each_slice(3) do |cocktail| %>
        <% cocktail.each do |i|%>
            <div align="center" class="float-left"><%= link_to i.name, cocktail_path(i) %></div>
        <%end%>
    <% end %>
<% end %>
