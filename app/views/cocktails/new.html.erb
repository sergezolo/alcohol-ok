<h1> New Cocktail </h1>

<%= form_for @cocktail do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br><br>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <br><br>
    <%= f.label :ingredients %>
    <br><br>
    <%= f.fields_for :ingredients do |ingredient| %>
        <%= ingredient.label :name %>
        <%= ingredient.text_field :name %>
        <%= ingredient.label :unit %>
        <%= ingredient.text_field :unit %>
        <br><br>
    <% end %>
    <%= f.label :steps %>
    <br><br>
    <%= f.text_field :steps %>
    <br><br>
    <%= f.submit "OK" %>
<% end %>

